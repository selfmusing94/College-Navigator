<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When password is hidden -->
    <item android:drawable="@drawable/eye_off" android:state_checked="false"/>

    <!-- When password is visible -->
    <item  android:drawable="@drawable/eye" android:state_checked="true" />

    <!-- Default state -->
    <item android:drawable="@drawable/eye_off"/>
</selector>