<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#7F39FB"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            android:paddingTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/gradient_orange_card">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="College Finder"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/bungee_regular"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:shadowColor="#40000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Search Card -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/searchCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Location Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Enter Location or Pincode"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Search Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSearchColleges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Find Colleges"
                    app:icon="@drawable/search_vector"
                    android:textSize="18sp"
                    app:iconGravity="textStart"
                    android:background="@drawable/gradient_orange_card"
                    app:backgroundTint="@null"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <!-- Current Location Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCurrentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use Current Location"
                    app:icon="@drawable/ic_location"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    app:iconGravity="textStart"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Location"
                    android:textSize="18sp"
                    android:id="@+id/tvCurrentLocation"
                    android:visibility="gone"
                    android:fontFamily="@font/acme_regular"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    android:textColor="#fa6e0a"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Results Section -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCollegeResults"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:visibility="gone"
            tools:listitem="@layout/item_college_result"/>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/university"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discover Your Dream College"
                android:textSize="18sp"
                android:textColor="#5E35B1"/>
        </LinearLayout>

    </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>