<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvDialogCollegeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:fontFamily="@font/akayakanadaka_regular"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvDialogLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme_regular"
                    android:drawableTint="@color/black"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvDialogRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/acme_regular"
                    android:drawableStart="@drawable/ic_star"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvDialogCutoff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme_regular"
                    android:drawableTint="@color/black"
                    android:drawableStart="@drawable/graduation_vector"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvDialogFoundedYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme_regular"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawableTint="@color/black"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Courses Offered"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvDialogCourses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme_regular"
                    android:drawableTint="@color/black"
                    android:drawableStart="@drawable/ic_courses"
                    android:drawablePadding="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>