<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/collegeImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/university"
            android:contentDescription="College Logo"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLocationCollegeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College of Engineering"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:maxLines="4"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="8dp"
                    android:tint="#7F39FB"/>

                <TextView
                    android:id="@+id/collegeLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mumbai, Maharashtra"
                    android:textSize="14sp"
                    android:textColor="#666666"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRanking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rank: 25"
                    android:textSize="12sp"
                    app:chipBackgroundColor="#E6E6FA"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Government"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    app:chipBackgroundColor="#E6E6FA"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>