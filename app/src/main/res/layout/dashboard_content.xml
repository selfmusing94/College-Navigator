            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#bcbcbc">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/drawerbutton"
                    android:src="@drawable/menu_vector"
                    android:background="@android:color/transparent"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dashappname2"
                    android:text="College Navigator"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:fontFamily="@font/gabriela_regular"/>

                <ImageButton
                    android:id="@+id/dashplusbutton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="15dp"
                    android:background="#f9e79f"
                    android:padding="5dp"
                    android:src="@drawable/plus_vector" />
            </Toolbar>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.google.android.material.search.SearchView
                    android:id="@+id/search_view"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="0dp"
                    android:background="@drawable/search_background"

                    app:searchIcon="@drawable/search_vector"

                    android:layout_margin="10dp"/>
            </RelativeLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="true"
                android:rowCount="4"
                android:columnCount="2"
                android:layout_marginTop="20dp">

                <!-- CardView 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="16dp" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/boy"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:layout_marginTop="12dp"
                            android:text="Profile"
                            android:fontFamily="@font/gagalin_regular"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                    </LinearLayout>
