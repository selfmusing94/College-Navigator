<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:src="@drawable/happy"
                android:elevation="4dp" />

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Gaurav Nayak K"
                android:fontFamily="@font/acme_regular"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/profession_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/akayakanadaka_regular"
                android:text="AI&amp;ML Student\n3rd Sem A Section\nBMSIT&amp;M"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#757575" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:elevation="4dp"
                android:radius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Me"
                        android:fontFamily="@font/akayakanadaka_regular"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <TextView
                        android:id="@+id/about_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/abeezee_regular"
                        android:text="A student who is passionate to learn App Development to create awesome digital experiences."
                        android:textColor="#757575"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/linkedin_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:layout_marginEnd="150dp"
                    android:padding="7dp"
                    android:scaleType="fitEnd"
                    android:background="@color/white"
                    android:src="@drawable/linkedin"/>


                <ImageButton
                    android:id="@+id/email_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="fitCenter"
                    android:layout_margin="8dp"
                    android:layout_marginStart="150dp"
                    android:background="@color/white"
                    android:padding="7dp"
                    android:src="@drawable/gmail"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>