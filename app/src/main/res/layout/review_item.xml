<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reviewProfilePhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Profile Photo"
            android:scaleType="centerCrop"
            android:src="@drawable/boy"
        android:background="@drawable/circular_accent_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reviewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:fontFamily="@font/acme_regular"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp" />

            <TextView
                android:id="@+id/reviewCollegeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College Name"
            android:textColor="#888888"
            android:textStyle="italic"
            android:textSize="14sp" />

            <TextView
                android:id="@+id/reviewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a review text."
                android:fontFamily="@font/abeezee_regular"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>